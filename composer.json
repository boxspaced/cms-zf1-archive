{
    "name": "boxspaced/idea-cms",
    "require": {
        "php": ">=5.5",
        "zendframework/zendframework1": "~1.12",
        "boxspaced/entity-manager": "dev-master",
        "robmorgan/phinx": "0.6.4",
        "pimple/pimple": "~3.0"
    },
    "require-dev": {
        "phing/phing": "~2.14",
        "phpunit/phpunit": "~4.2",
        "behat/behat": "~2.5",
        "behat/mink-extension": "~1.3",
        "behat/mink-goutte-driver": "~1.2",
        "behat/mink-selenium2-driver": "~1.2",
        "fabpot/goutte": "~1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/boxspaced/entity-manager"
        }
    ],
    "config": {
        "bin-dir": "bin/",
        "process-timeout": 1200
    },
    "include-path": [
        "library"
    ]
}
